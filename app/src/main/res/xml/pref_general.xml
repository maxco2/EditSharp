    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="0.0.0.0"
        android:inputType="textCapWords"
        android:key="remote_IP_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="服务器地址" />
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="/home/code"
        android:inputType="textCapWords"
        android:key="remote_Directory_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="远程上传目录" />
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="root"
        android:inputType="textCapWords"
        android:key="remote_username_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="远程用户名" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue=""
        android:inputType="textPassword"
        android:key="remote_passwords_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="远程密码" />
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="/code"
        android:inputType="textCapWords"
        android:key="local_directory_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="本地默认目录" />
    <Preference
        android:title="无需包含外置存储卡目录，例：/code"
        />
